          "cognito-identity.amazonaws.com:aud": "${aws_cognito_identity_pool.gallery_admins_id_pool.id}"
        },
        "ForAnyValue:StringLike": {
          "cognito-identity.amazonaws.com:amr": "unauthenticated"
